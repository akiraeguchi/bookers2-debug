<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2><%= @user.name %> さんとのチャット</h2>
      <table class="message table-inverse">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
            <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody class="chat-message">
          <%= render 'chats/chat-message', chats: @chats %>
        </tbody>
      </table>
      <%= form_with model: @chat, remote: true do |f| %>
      <div class="form-group">
        <%= f.text_field :message, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.hidden_field :room_id %>
      </div>
      <div class="form-group">
        <%= f.submit "SEND", class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>