<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>Follower Users</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
            <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpeg") %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><span>フォロー数:</span><%= user.followings.count %></td>
          <td><span>フォロワー数:</span><%= user.followers.count %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>